<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@android:color/transparent"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_above="@+id/Effect_Rcv"
        android:background="@drawable/edge_round_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/Effect_IMV"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="300dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Post_Top_Container"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Post_My_IMG"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/Post_My_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User_Name"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Post_My_IMG"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <Button
            android:id="@+id/Post_Complete_Btn"
            android:text="게시"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_border_1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/Post_Text_Container"
        android:layout_below="@+id/Post_Top_Container"
        android:layout_above="@+id/Post_Set_Btn_Container"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/Post_Text_EditText"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </EditText>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Post_Set_Btn_Container"
        android:layout_margin="25dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Post_Set_Effect_Btn"
            android:layout_weight="2"
            android:text="효과"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Post_Set_Text_Color"
            android:layout_weight="2"
            android:text="글자 색"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Post_Set_OpenGrade_Btn"
            android:text="모든 사용자"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Effect_Rcv"
        android:visibility="visible"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        tools:listitem="@layout/effect_rcv_item">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>